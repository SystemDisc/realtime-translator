# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88  # PEP 8 recommends 79, but 88 is common when using Black for formatting
trim_trailing_whitespace = true
insert_final_newline = true

# Configuration and Markdown files
[*.{yml,yaml,json,md}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = true

# For Makefiles
[Makefile]
indent_style = tab

# Ignore generated files
[*.min.js]
indent_style = none

[*.{pyc,pyo}]
indent_style = none

# HTML, CSS, and JavaScript files
[*.{html,css,js}]
indent_style = space
indent_size = 2
